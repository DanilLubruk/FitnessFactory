<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.example.fitnessfactory.ui.viewmodels.AdminEditorViewModel" />
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@={model.admin.name}"
            android:layout_marginBottom="@dimen/component_margin" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:text="@{model.admin.email}"
            android:layout_marginBottom="@dimen/component_margin"/>

        <TextView
            android:id="@+id/tvGyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:text="@string/title_gyms"
            android:layout_marginBottom="@dimen/component_margin"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGyms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvGyms"/>

        <ProgressBar
            android:id="@+id/pkProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <com.github.clans.fab.FloatingActionButton
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fabAddGym"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            fab:menu_animationDelayPerItem="0"
            fab:menu_colorNormal="@color/colorMessageBackground"
            fab:menu_colorPressed="@color/colorMessageBackground"
            fab:menu_colorRipple="@color/colorMessageBackground"
            fab:menu_labels_colorNormal="@color/colorMessageBackground"
            fab:menu_labels_colorPressed="#66FFFFFF"
            fab:menu_labels_colorRipple="#66FFFFFF"
            fab:menu_labels_hideAnimation="@anim/jump_to_down"
            fab:menu_labels_showAnimation="@anim/jump_from_down"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_textColor="@color/white"
            fab:menu_shadowColor="#444"
            fab:menu_showShadow="true"/>
    </RelativeLayout>
</layout>