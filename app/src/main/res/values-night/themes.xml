<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessFactory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royalBlue</item>
        <item name="colorPrimaryVariant">@color/royalBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="mainTextColor">@color/white</item>
        <item name="warnColor">@color/scarletRed</item>
        <item name="tabBackground">@color/light_tab_background</item>
        <item name="accentColor">@color/gold</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="FragmentDialogsTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/mainTextColor</item>
        <item name="android:textColorSecondary">?attr/mainTextColor</item>
        <item name="actionMenuTextColor">?attr/mainTextColor</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="colorControlNormal">?attr/mainTextColor</item>
    </style>

    <style name="NavigatorStyle">
        <item name="android:listDivider">?attr/mainTextColor</item>
    </style>
</resources>